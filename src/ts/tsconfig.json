{
  "extends": "./config/tsconfig.common.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["./server/*", "./client/src/*"],
      "shared/*": ["./shared/*"],
      "config/*": ["./config/*", "./server/config/*"]
    },
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2016"]
  },
  "include": ["./client/", "./server/"],
  "files": ["./client/src/views/index.tsx", "./server/index.ts"]
}
