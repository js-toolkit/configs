{
  "name": "@vzh/configs",
  "version": "3.24.3",
  "description": "Default configurations for internal projects",
  "author": "Vladimir Zhukov",
  "license": "MIT",
  "contributors": [
    {
      "name": "Vladimir Zhukov",
      "url": "http://github.com/vlazh"
    }
  ],
  "main": "./",
  "scripts": {
    "clean": "rimraf lib/",
    "copy": "copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' ./lib/ && copyfiles package.json LICENSE README.md ./lib/",
    "build": "npm run clean && tsc --project ./tsconfig.json && npm run copy",
    "build-to-tutoron": "npm run clean && tsc --project ./tsconfig.json --outDir '/home/vladimir/dev/sources/tutoron/node_modules/@vzh/configs/' && copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' '/home/vladimir/dev/sources/tutoron/node_modules/@vzh/configs/'",
    "build-to-pwa": "npm run clean && tsc --project ./tsconfig.json --outDir '/home/vladimir/dev/sources/pwa/node_modules/@vzh/configs/' && copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' '/home/vladimir/dev/sources/pwa/node_modules/@vzh/configs/'",
    "build-to-reflexy": "npm run clean && tsc --project ./tsconfig.json --outDir '/home/vladimir/dev/sources/reflexy/node_modules/@vzh/configs/' && copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' '/home/vladimir/dev/sources/reflexy/node_modules/@vzh/configs/'",
    "build-to-react-components": "npm run clean && tsc --project ./tsconfig.json --outDir '../react-components/node_modules/@vzh/configs/' && copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' '../react-components/node_modules/@vzh/configs/'",
    "patch-publish": "npm version patch && npm run build && npm publish ./lib --access public && git push --follow-tags",
    "minor-publish": "npm version minor && npm run build && npm publish ./lib --access public && git push --follow-tags",
    "major-publish": "npm version major && npm run build && npm publish ./lib --access public && git push --follow-tags"
  },
  "devDependencies": {
    "@types/node": "^12.0.3",
    "@types/webpack": "^4.4.32",
    "@types/webpack-dev-server": "^3.1.6",
    "@types/webpack-merge": "^4.1.5",
    "@types/webpack-node-externals": "^1.6.3",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "babel-eslint": "^10.0.1",
    "copyfiles": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.3",
    "typescript": "^3.4.5",
    "webpack": "^4.32.2",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "peerDependencies": {
    "webpack-merge": ">= 4.2"
  }
}
