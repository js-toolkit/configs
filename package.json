{
  "name": "@vzh/configs",
  "version": "2.5.0",
  "description": "Default configurations for internal projects",
  "main": "./",
  "scripts": {
    "clean": "rimraf lib/",
    "copy": "copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' ./lib/ && copyfiles package.json LICENSE ./lib/",
    "build": "npm run clean && tsc --project ./tsconfig.json && npm run copy",
    "build-to-project": "npm run clean && tsc --project ./tsconfig.json --outDir '../project-langlearn/node_modules/@vzh/configs/' && copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' '../project-langlearn/node_modules/@vzh/configs/'",
    "build-to-reflexy": "npm run clean && tsc --project ./tsconfig.json --outDir '../reflexy/node_modules/@vzh/configs/' && copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' '../reflexy/node_modules/@vzh/configs/'",
    "build-to-js-collections": "npm run clean && tsc --project ./tsconfig.json --outDir '../js-collections/node_modules/@vzh/configs/' && copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' '../js-collections/node_modules/@vzh/configs/'",
    "build-to-tabix": "npm run clean && tsc --project ./tsconfig.json --outDir '../tabixio/tabix/node_modules/@vzh/configs/' && copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' '../tabixio/tabix/node_modules/@vzh/configs/'",
    "patch-publish": "npm version patch && npm run build && npm publish ./lib --access public && git push --follow-tags",
    "minor-publish": "npm version minor && npm run build && npm publish ./lib --access public && git push --follow-tags",
    "major-publish": "npm version major && npm run build && npm publish ./lib --access public && git push --follow-tags"
  },
  "author": "Vladimir Zhukov",
  "license": "MIT",
  "contributors": [
    {
      "name": "Vladimir Zhukov",
      "url": "http://github.com/vlazh"
    }
  ],
  "devDependencies": {
    "@types/mini-css-extract-plugin": "^0.2.0",
    "@types/node": "^10.9.4",
    "@types/webpack": "^4.4.11",
    "@types/webpack-dev-server": "^3.1.0",
    "@types/webpack-merge": "^4.1.3",
    "@types/webpack-node-externals": "^1.6.3",
    "babel-eslint": "^9.0.0",
    "copyfiles": "^2.1.0",
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-typescript": "^0.12.0",
    "mini-css-extract-plugin": "^0.4.2",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typelevel-ts": "^0.3.1",
    "typescript": "^3.0.3",
    "typescript-eslint-parser": "^18.0.0",
    "webpack": "^4.18.1",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  }
}
