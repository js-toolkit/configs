{
  "name": "@vzh/configs",
  "version": "3.36.0",
  "description": "Default configurations for internal projects",
  "author": "Vladimir Zhukov",
  "license": "MIT",
  "contributors": [
    {
      "name": "Vladimir Zhukov",
      "url": "http://github.com/vlazh"
    }
  ],
  "main": "./",
  "scripts": {
    "update-deps": "yarn upgrade-interactive --latest",
    "clean": "rimraf dist/",
    "copy": "copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' ./dist/ && copyfiles package.json LICENSE README.md ./dist/",
    "build": "npm run clean && tsc --project ./tsconfig.json && npm run copy",
    "build-to-tutoron": "tsc --project ./tsconfig.json --outDir '/home/vladimir/dev/sources/tutoron/node_modules/@vzh/configs/' && copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' '/home/vladimir/dev/sources/tutoron/node_modules/@vzh/configs/'",
    "build-to-lcardio-app": "tsc --project ./tsconfig.json --outDir '/home/vladimir/dev/sources/lcardio-app/node_modules/@vzh/configs/' && copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' '/home/vladimir/dev/sources/lcardio-app/node_modules/@vzh/configs/'",
    "build-to-reflexy": "tsc --project ./tsconfig.json --outDir '/home/vladimir/dev/sources/reflexy/node_modules/@vzh/configs/' && copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' '/home/vladimir/dev/sources/reflexy/node_modules/@vzh/configs/'",
    "build-to-react-components": "tsc --project ./tsconfig.json --outDir '../react-components/node_modules/@vzh/configs/' && copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' '../react-components/node_modules/@vzh/configs/'",
    "patch-publish": "npm version patch && npm run build && git push --follow-tags",
    "minor-publish": "npm version minor && npm run build && git push --follow-tags",
    "major-publish": "npm version major && npm run build && git push --follow-tags"
  },
  "devDependencies": {
    "@types/ftp": "^0.3.29",
    "@types/node": "^12.6.8",
    "@types/node-telegram-bot-api": "^0.31.0",
    "@types/webpack": "^4.32.0",
    "@types/webpack-dev-server": "^3.1.7",
    "@types/webpack-node-externals": "^1.6.3",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-eslint": "^10.0.2",
    "copyfiles": "^2.1.1",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "ftp": "^0.3.10",
    "node-telegram-bot-api": "^0.30.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "typescript": "^3.5.3",
    "webpack": "^4.36.1",
    "webpack-node-externals": "^1.7.2"
  }
}
