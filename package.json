{
  "name": "@vzh/configs",
  "version": "3.15.0",
  "description": "Default configurations for internal projects",
  "main": "./",
  "author": "Vladimir Zhukov",
  "license": "MIT",
  "contributors": [
    {
      "name": "Vladimir Zhukov",
      "url": "http://github.com/vlazh"
    }
  ],
  "scripts": {
    "clean": "rimraf lib/",
    "copy": "copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' ./lib/ && copyfiles package.json LICENSE README.md ./lib/",
    "build": "npm run clean && tsc --project ./tsconfig.json && npm run copy",
    "build-to-tutoron": "npm run clean && tsc --project ./tsconfig.json --outDir '../tutoron/node_modules/@vzh/configs/' && copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' '../tutoron/node_modules/@vzh/configs/'",
    "build-to-pwa": "npm run clean && tsc --project ./tsconfig.json --outDir '../pwa/node_modules/@vzh/configs/' && copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' '../pwa/node_modules/@vzh/configs/'",
    "build-to-reflexy": "npm run clean && tsc --project ./tsconfig.json --outDir '../reflexy/node_modules/@vzh/configs/' && copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' '../reflexy/node_modules/@vzh/configs/'",
    "build-to-react-components": "npm run clean && tsc --project ./tsconfig.json --outDir '../@vzh-react-components/node_modules/@vzh/configs/' && copyfiles --exclude './src/**/*.ts' --up 1 './src/**/*' '../@vzh-react-components/node_modules/@vzh/configs/'",
    "patch-publish": "npm version patch && npm run build && npm publish ./lib --access public && git push --follow-tags",
    "minor-publish": "npm version minor && npm run build && npm publish ./lib --access public && git push --follow-tags",
    "major-publish": "npm version major && npm run build && npm publish ./lib --access public && git push --follow-tags"
  },
  "devDependencies": {
    "@types/node": "^10.12.21",
    "@types/webpack": "^4.4.24",
    "@types/webpack-dev-server": "^3.1.2",
    "@types/webpack-merge": "^4.1.3",
    "@types/webpack-node-externals": "^1.6.3",
    "@typescript-eslint/eslint-plugin": "^1.2.0",
    "@typescript-eslint/parser": "^1.2.0",
    "babel-eslint": "^10.0.1",
    "copyfiles": "^2.1.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "typescript": "^3.3.1",
    "webpack": "^4.29.1",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "peerDependencies": {
    "webpack-merge": ">= 4.2"
  }
}
